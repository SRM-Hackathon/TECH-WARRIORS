<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/two.jpg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context="com.example.smile.profitable_farming.Getinfo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/radio44"
        android:layout_toEndOf="@+id/button"
        android:layout_alignBottom="@+id/button" />

    <TextView
        android:text="ஈரப்பதம்:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_marginTop="31dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:text="மண்:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="சமர்ப்பிக்கவும்"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/radio01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="true"
            android:longClickable="true"
            android:singleLine="true"
            android:clickable="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:foreground="#fe0000" />

        <RadioButton
            android:id="@+id/radio02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="true"
            android:clickable="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:foreground="#ff6f00" />

        <RadioButton
            android:id="@+id/radio03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="true"
            android:contextClickable="false"
            android:clickable="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            android:foreground="#fef900" />

        <RadioButton
            android:id="@+id/radio04"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:checked="true"
            android:clickable="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView4"
            android:foreground="#2bff00" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_toEndOf="@+id/textView"
        android:orientation="vertical"
        android:layout_above="@+id/button5"
        android:focusableInTouchMode="false">


    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="இடம்"
        android:id="@+id/button"
        android:layout_alignParentStart="true" />
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/radio11"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:checked="true"
        android:text="கருப்பு மண்"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <RadioButton
        android:id="@+id/radio22"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:checked="true"
        android:text="வண்டல் மண்"
        android:layout_below="@+id/radio11"
        android:layout_alignEnd="@+id/textView3"
        android:clickable="true" />

    <RadioButton
        android:id="@+id/radio33"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="செம்மண்"
        android:checked="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView4"
        android:clickable="true" />

    <RadioButton
        android:id="@+id/radio44"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="களிமண்"
        android:checked="true"
        android:layout_alignTop="@+id/radio22"
        android:layout_alignEnd="@+id/button5"
        android:clickable="true" />

</RadioGroup>


</RelativeLayout>